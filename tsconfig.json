{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": true, // Включаем поддержку JSON модулей
    "esModuleInterop": true, // Для поддержки импорта по умолчанию
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
